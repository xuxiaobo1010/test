.container_index{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  /* flex-direction:center; */
}
/* 轮播图 */
.swiper_box {
  width: 100%;
  height: 400rpx;
}
swiper-item image {
  width: 90%;
  height: 90%;
  margin: 5% 5%;
  border-radius: 8px;
  display: inline-block;
  overflow: hidden;
}
/* nav */
.nav{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.nav .nav-item{
  width: 90px;
  height: 90px;
  /* background-color: #0000ff; */
  display: flex;
  margin: 5px 30px;
  box-sizing: border-box;
  flex-direction: column;

}

/* .nav .nav-item:nth-child(1){
