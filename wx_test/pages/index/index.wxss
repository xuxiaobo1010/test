} */
.nav .nav-item image{
  margin: 5px auto;
  width:54px;
  height: 54px;
  border-radius: 27px;
}
.nav .nav-item view{
  text-align: center;
  line-height: 25px;
}

/* 签到 */
.sign{
  width: 100%;
  margin: 10px 0;
}
.sign image{
  width: 100%;
  margin: 0 auto;
}

