/* pages/intruction/intruction.wxss */
.wrap{
   width: 310px;
   /* height: 450px; */
   margin:30px auto;
   border-radius: 4px;
    box-sizing: border-box;
    box-shadow: 0 0 10px #acacac;
    display: flex;
    flex-direction: column;

}
.wrap .top{
  line-height:40px;
  text-align: center;
  background-color: #e9e9e9;
}
.wrap .content{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.content_title{
  text-align: center;
  margin: 4px;
  font-size: 16px;
  font-weight: 600;
}
.content_intro{
 margin: 4px;
 padding:0 8px;
 font-size: 14px;
}
.content_type{
  display: flex;
  flex-wrap: wrap;
}
.content_type .type_item{
  width: 30%;
  font-size: 14px;
  margin-left: 6px;
}
.content_type .type_item text{
  font-weight: 600;
  display: inline-block;
  padding-right: 4px;
}
.wrap .content_item{
  padding-left: 6px;
  font-size: 14px;
}
.content_item text{
  padding:0 4px;
  font-weight: 600;
  color: #36b9be;
}
.wrap .buttom{
  height: 40px;
  box-sizing: border-box;
  text-align: center;
  background-color: #e9e9e9;
}
.buttom_btn{
  width: 60px;
  line-height: 30px;
  font-size: 12px;
  color: #fff;
  font-weight: 600;
  margin: 5px auto;
  background-color: #323333;
  border-radius: 4px;
}