.timeline-container {
	margin: 10rpx 10rpx;
}

.horView {
	display: flex;
	padding-left: 17px;
	height: 50px;
}

.inputName {
	width: 70%;
	line-height: 50px;
	height: 50px;
	margin-left: 10px;
}

.textName{
  line-height: 46px;
color: #000000;
font-size: 17px;
text-align: left;
font-family: PingFangSC-regular;
}
.btnAddView {
	height: 40px;
	margin-top: 20px;
	line-height: 18px;
	border-radius: 4px 4px 4px 4px;
	background-color: #84d3be;
	text-align: center;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 15px;
	margin-left: 10px;
	color: #ffffff;
}
.anit {
  width: 100%;
  height: 70rpx;
  background: red;
  position: absolute;
  color: white;
  font-size: 30rpx;
	line-height: 70rpx;
	/* top: 0px; */
  top: -70rpx;
  z-index: 11;
  text-align: center;
}
.show {
  top: 0rpx;
  animation: show 2s;
  animation-timing-function: ease;
}
