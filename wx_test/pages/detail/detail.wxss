/* pages/detail/detail.wxss */
.wrap{
 display: flex;
 flex-direction: column;

}
.top{
  text-align: center;
  font-size: 22px;
  padding: 6px 4px;
  /* border-bottom: 0.5px solid #000; */
}
.grade{
  text-align: center;
  padding-top:4px;
  padding-bottom: 8px;
  font-weight: 600;
  font-size: 24px;
  color: #e95547;
}
.testtime{
 text-align: center;
 font-size: 20px;
}
.testtime text{
  font-weight: 600;
}
.testname{
  text-align: center;
}
.test-detail{
  width: 90%;
  line-height: 40px;
  margin: 2px auto;
  display: flex;
  background-color: #f1f1f1;
}
.item{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.item view{
  text-align: center;
}
.red{
  color: red;
}
.green{
  color: #00b26a;
}
.bottom{
  display: flex;
  justify-content: center;
  width: 90%;
  margin: 30px auto;
  background-color: #f1f1f1;
}
.bottom-item{
  margin: 15px;
  line-height: 24px;
  text-align: center;
  width: 100px;
  display: flex;
  justify-content: center;
}
.bottom-item .img{
  display: inline-block;
  padding: 2px 4px;
    width: 20px;
    height: 20px;
}
.bottom-item .img_e{
  display: inline-block;
  padding: 2px 4px;
    width: 18px;
    height: 18px;
}
.bottom .bottom-item:nth-child(1){
 margin-right: 20px;
}
